<% include ../partials/header %>

<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>Welcome to Campground page</h1>
			<p>View our campgrounds</p>
			<p>
				<a class="btn btn-primary btn-lg" href="/campgrounds/new">Create a new campground</a>
			</p>
		</div>
	</header>

	<div class="row text-center" style="display: flex; flex-wrap: wrap">
		<% campgrounds.forEach(function(campground){ %>
			<div class="col-md-3 col-sm-6">
				<div class="thumnail">
					<img src="<%= campground.image %>" style="width: 75%">
					<div class="caption">
						<h4><%= campground.name %></h4>
					</div>
					<a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More info</a>
				</div>
			</div>
		<% }); %>
	</div>

	<h1>Campground!</h1>

	
</div>


<% include ../partials/footer %>